            <string>///Create the rest of the bridge
//Please take note that all variables should have been initialized
//with the Level builder first.
/*
    -Platforms
    -X1/Y1
    -X2/Y2
            */


var XLeftBase;
var YLeftBase;
            
var XRightBase;
var YRightBase;

var SpaceBetweenBases;
var SpacePerPlatforms;

var BridgeDirection;

var This_platform;
var This_right_base;
var This_rope;

XLeftBase = X1 + sprite_width;
YLeftBase = Y1 - 6;

XRightBase = X2 - sprite_width;
YRightBase = Y2 - 6;

SpaceBetweenBases = point_distance(XLeftBase, YLeftBase, XRightBase, YRightBase);
SpacePerPlatforms = SpaceBetweenPlatforms/max(1, Platforms - 1)

BridgeDirection = point_direction(XLeftBase, YLeftBase, XRightBase, YRightBase);


//Right Base
This_right_base = instance_create(X2, Y2, object_bridge_base);
This_right_base.image_xscale *= -1;

//Platforms and ropes 
// Being in the same for loop since theses two objects are really intricated.
for(i=1; i&lt;=Platforms; i++){

    This_rope = instance_create(
                    XLeftBase + lengthdir_x(SpacePerPlatforms*(i - 1), BridgeDirection),
                    YLeftBase + lengthdir_y(SpacePerPlatforms*(i - 1), BridgeDirection),
                    object_bridge_rope
                    );
    if (i = 1){
        This_rope.LeftConnection = id;
        }
    else{
        This_rope.LeftConnection = This_platform;
        }
    This_rope.direction = BridgeDirection;

    This_platform = instance_create(
                    XLeftBase + lengthdir_x(SpacePerPlatforms*i - (SpacePerPlatforms/2), BridgeDirection),
                    YLeftBase + lengthdir_y(SpacePerPlatforms*i, BridgeDirection),
                    object_bridge_platform
                    );
    This_platform.direction = BridgeDirection;
    
    This_rope.RightConnection = This_platform;
    }
//Since we need k = Platforms+1 ropes, we create the last rope after the for loop,
//which was originally dedicated to create platforms.

This_rope = instance_create(
                    XLeftBase + lengthdir_x(SpaceBetweenBases, BridgeDirection),
                    YLeftBase + lengthdir_y(SpaceBetweenBases, BridgeDirection),
                    object_bridge_rope
                    );
This_rope.LeftConnection = This_platform;
This_rope.RightConnection = This_right_base;



    

    
    
    
</string>
