    {

//Right shoulder
if active_item = 0
    {
    if gamepad_button_check_pressed(0,gp_shoulderr)
        {
        selected_item += 1;
        if selected_item &gt; (array_length_1d(numberofitems)-1)
            {
            selected_item = 1;
            }
        repeat (array_length_1d(numberofitems)-1) 
            {
            if numberofitems[selected_item] = 0
                {
                selected_item += 1;
                if selected_item &gt; (array_length_1d(numberofitems)-1)
                    {
                    selected_item = 1;
                    }
                }
            }
        }
    else
        {
        if gamepad_button_check_pressed(0,gp_shoulderl)
            {
            selected_item-=1;
            if selected_item &lt; 1
                {
                selected_item = 7;
                }
            repeat (array_length_1d(numberofitems)) 
                    {
            if numberofitems[selected_item] = 0
                    {
                    selected_item -= 1;
                    if selected_item &lt; 1
                        {
                        selected_item = array_length_1d(numberofitems)-1;
                        }
                    }
                }
            }
        }
    }
    
